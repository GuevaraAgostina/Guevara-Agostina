{
    "version": 2,
    "builds": [
        {
            "src": "app/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "index.html",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/send-email",
            "dest": "app/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "index.html"
        }
    ]
}